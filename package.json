{
  "name": "bristle",
  "version": "0.2.9",
  "description": "A small JS library for drawing dynamic paths into html canvas elements.",
  "repository": {
    "type": "git",
    "url": "https://github.com/njweb/bristle"
  },
  "author": "Nick Jenkins",
  "licenses": [
    {
      "type": "MIT",
      "url": "http://www.opensource.org/licenses/mit-license.php"
    }
  ],
  "main": "lib/bristle.js",
  "module": "lib/bristle.module.js",
  "scripts": {
    "build": "npm run clean && npm run build:dev && npm run build:module && npm run build:prod",
    "build:dev": "rollup -c",
    "build:module": "(export NODE_ENV=module; rollup -c)",
    "build:prod": "(export NODE_ENV=production; rollup -c)",
    "clean": "rm -rf lib && mkdir -p lib/",
    "test": "jest test/*.test.js"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-jest": "^21.2.0",
    "babel-preset-es2015": "^6.24.1",
    "jest": "^21.2.1",
    "rollup": "^0.50.0",
    "rollup-plugin-babel": "^3.0.2",
    "rollup-plugin-replace": "^2.0.0",
    "rollup-plugin-uglify": "^2.0.1",
    "uglify-es": "^3.3.6"
  }
}
